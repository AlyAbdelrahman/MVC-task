@model EmployeeViewModel

@{ 
    Layout= "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title=ViewBag.title;
    ViewBag.Action = ViewBag.action;

}

    <div class="container"> 
        <h1> @ViewBag.Title</h1>
        <div>
            @using (Html.BeginForm())
            {
                @Html.TextBoxFor( m =>  m.Employee.id ,new { @Value = Model.Employee==null?0:Model.Employee.id, @type = "hidden" })
             
            <div class="form-group" >
                @Html.LabelFor(e => e.Employee.Name)
                @Html.TextBoxFor(e => e.Employee.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Employee.Name)
            </div >

            <div class="form-group">
               @Html.LabelFor(e=>e.Employee.Salary)
                @Html.TextBoxFor(e => e.Employee.Salary, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Employee.Salary)
            </div>


            <div class="form-group">

                @Html.LabelFor(e=>e.Employee.Gender)
                @Html.EnumDropDownListFor(e => e.Employee.Gender,"Select Gender", new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Employee.Gender)
            </div>

            <div class="form-group">

                @Html.LabelFor(e => e.Departments)
                @Html.DropDownListFor(e => e.Employee.fk_DepartmentId, new SelectList(Model.Departments, "id", "Name"),"Select Department", new { @class = "form-control" })
                @*@Html.ValidationMessageFor(e => e.Employee.fk_DepartmentId)*@
            </div>


            <input type="submit" value="@ViewBag.Action" class="btn btn-primary"/>

            }
           
         </div>
    </div>


@section styles{
<link href="~/Content/Style.css" rel="stylesheet" />
    }

@section scripts{
    
<script src="~/scripts/jquery-3.0.0.min.js"></script>
    
<script src="~/scripts/jquery.validate.min.js"></script>
<script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
    } 